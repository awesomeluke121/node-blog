<%- include('header') %>

<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <form class="ui form segment" method="post" enctype="multipart/form-data">
      <div class="field required">
        <label>帳號</label>
        <input placeholder="用户名" type="text" name="name">
      </div>
      <div class="field required">
        <label>密碼</label>
        <input placeholder="password" type="password" name="password">
      </div>
      <div class="field required">
        <label>重複密碼</label>
        <input placeholder="repeat password" type="password" name="repassword">
      </div>
      <div class="field required">
        <label>性别</label>
        <select class="ui compact selection dropdown" name="gender">
          <option value="m">男</option>
          <option value="f">女</option>
          <option value="x">保密</option>
        </select>
      </div>
      <div class="field required">
        <label>大頭貼</label>
        <input type="file" name="avatar">
      </div>
      <div class="field required">
        <label>自我介紹(30字內）</label>
        <textarea name="bio" rows="5"></textarea>
      </div>
      <input type="submit" class="ui button fluid" value="註冊">
    </form>
  </div>
</div>

<%- include('footer') %>
